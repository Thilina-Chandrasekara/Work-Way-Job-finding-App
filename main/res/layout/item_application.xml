<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Job title and company name" />

    <TextView
        android:id="@+id/educationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Full name"
        android:layout_below="@id/nameTextView"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/experienceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Highest education level"
        android:layout_below="@id/educationTextView"
        android:layout_marginTop="4dp" />

    <Button
        android:id="@+id/downloadCvButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download CV"
        android:layout_below="@id/experienceTextView"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:layout_below="@id/downloadCvButton"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginStart="16dp" />

</RelativeLayout>
